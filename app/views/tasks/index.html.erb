
<h1><%=@task_list.name%> Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Due Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.due_date %></td>
        <td><%= link_to 'Edit', edit_task_list_task_path(@task_list.id, task) %></td>
        <td><%= link_to 'Destroy', task_list_task_path(@task_list.id, task.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%=link_to 'Create new task', new_task_list_task_path(@task_list.id) %>
