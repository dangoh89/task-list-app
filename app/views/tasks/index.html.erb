<h1 align="center">My Current Tasks in <%= @task_list.name %></h1>
<br><br>
<div class="container">
   <h1>Current Task</h1>
   <% @tasks.each do |task| %>
   <div class="card bg-faded card-width">
      <div class="tasklist-title padding-left">
         Task Description: <%= task.description %><br>
         Due Date: <%= task.due_date %><br>
         Status: <%= link_to "#{task.completed ? 'Completed' : 'In-Progress'}", completed_task_list_task_path(@task_list, task), method: :put %>
      </div>
      <div class="tasklist-body padding-left">
         <%= link_to 'Edit', edit_task_list_task_path(@task_list, task),class: "btn btn-xs btn-success" %>
         <%= link_to 'Destroy', task_list_task_path(@task_list, task), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %>
      </div>
   </div>
   <br>
   <% end %>
   <%=link_to 'Create another task', new_task_list_task_path(@task_list), class: "btn btn-xs btn-secondary" %> 
   <%=link_to 'Back to Tasklist', root_path, class: "btn btn-xs btn-secondary" %> 
</div>