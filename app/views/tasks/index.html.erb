
<h1><%=@task_list.name%> Tasks</h1>

<h3>Filter</h3>
<%= form_tag(task_list_tasks_path, method: :get) do %>
  <%= text_field_tag :term, params[:term] %>
  <%= submit_tag 'Search' %>
<% end %>
<%= form_tag(task_list_tasks_path, method: :get) do %>
  <%= submit_tag 'Show all' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Due Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.due_date %></td>
        <td><%= link_to "#{task.completed ? 'Completed' : 'In-Progress'}", completed_task_list_task_path(@task_list, task), method: :put %></td>
        <td><%= link_to 'Edit', edit_task_list_task_path(@task_list, task) %></td>
        <td><%= link_to 'Destroy', task_list_task_path(@task_list, task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%=link_to 'Create new task', new_task_list_task_path(@task_list) %>
<%=link_to 'Back to Home', task_lists_path %>
